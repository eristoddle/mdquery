{
  "name": "mdquery-ts",
  "version": "0.1.0",
  "description": "TypeScript library for SQL-like querying of markdown files, optimized for Obsidian plugins",
  "main": "./dist/node/index.js",
  "browser": "./dist/browser/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "node": {
        "import": "./dist/node/index.esm.js",
        "require": "./dist/node/index.js"
      },
      "browser": {
        "import": "./dist/browser/index.esm.js",
        "require": "./dist/browser/index.js"
      },
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run build:types && npm run build:node && npm run build:browser",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "build:node": "rollup -c rollup.config.node.js",
    "build:browser": "rollup -c rollup.config.browser.js",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "markdown",
    "sql",
    "query",
    "obsidian",
    "sqlite",
    "typescript",
    "full-text-search"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "js-yaml": "^4.1.0",
    "marked": "^12.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/marked": "^12.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "rollup": "^4.9.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-typescript": "^11.1.6",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "better-sqlite3": "^9.0.0",
    "wa-sqlite": "^0.9.0"
  },
  "peerDependenciesMeta": {
    "better-sqlite3": {
      "optional": true
    },
    "wa-sqlite": {
      "optional": true
    }
  }
}